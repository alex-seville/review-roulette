%h1 Review roulette

.hello
  %h3.players Players
  %ul.thumbnails
    - @players.each do |p|
      %li= image_tag avatar_url(p), title: p.name, alt: p.name  
  = render 'form'
:javascript
  setWinner = function(winner){
    winner -= 1;
    var result = $.getJSON('#{players_path}.json', function(data){
      winner = data[winner];
  
      $('#winnername').text(winner.name);
      $('#review_player_id').attr('value', winner.id);
    });
  };
  
  